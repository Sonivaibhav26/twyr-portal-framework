<script type="text/x-handlebars" data-template-name="profile">
<div class="box box-default" style="box-shadow:none;">
<div class="box-header with-border">
	<h3 class="box-title">Manage Profile</h3>
</div>
<div id="div-profile-component-failure-message" class="box-body callout callout-danger" style="display:none; border-radius:0px;">
	{{#each model.errors.id as |error|}}
		<span id="profile-component-failed-message">{{error.message}}</span>
	{{/each}}
</div>
<div id="div-profile-component-alert-message" class="box-body callout callout-danger" style="display:none; border-radius:0px;">
	<i class="fa fa-ban"></i>
	<span id="profile-component-alert-message">Alert!</span>
</div>
<div id="div-profile-component-progress-message" class="box-body callout callout-info" style="display:none; border-radius:0px;">
	<i class="fa fa-spinner fa-spin"></i>
	<span id="profile-component-progress-message">Progress...</span>
</div>
<div id="div-profile-component-success-message" class="box-body callout callout-success" style="display:none; border-radius:0px;">
	<span id="profile-component-success-message">Success!</span>
</div>
<div class="box-body" style="text-align:left;">
	<div class="row">
		<div class="col-lg-1 col-md-1 col-sm-1 col-xs-1">
			&nbsp;
		</div>
		<div class="col-lg-4 col-md-4 col-sm-4 col-xs-10">
			{{manage-personal-details model=model}}
		</div>
		<div class="col-lg-3 col-md-3 col-sm-3 col-xs-10">
			{{change-password model=model}}
		</div>
		<div class="col-lg-3 col-md-3 col-sm-3 col-xs-10">
			{{manage-linked-accounts}}
		</div>
	</div>
</div>
</div>
</script>

