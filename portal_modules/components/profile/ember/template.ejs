<script type="text/x-handlebars" data-template-name="components/change-password">
<div class="box box-primary">
	<div class="box-header with-border">
		<h3 class="box-title">Change Password</h3>
		<div class="pull-right" style="cursor:pointer; margin:0px 5px;">
			<button id="component-change-password-button-submit" type="submit" class="btn btn-primary btn-sm" {{action "controller-action" "changePassword" bubbles=false}}>
				<i class="fa fa-save" style="margin-right:5px;" /><span>Change</span>	
			</button>
		</div>
	</div>
	<div id="div-box-body-component-change-password" class="box-body">
	<form role="form">
		<div class="form-group">
			<label>Login</label>
			{{input id="component-manage-personal-details-input-login" type="text" value=model.email class="form-control" readonly="readonly"}}
		</div>
		<div class="form-group">
			<label>Member Since</label>
			{{input id="component-manage-personal-details-input-created-on" type="text" value=model.formattedCreatedOn class="form-control" readonly="readonly"}}
		</div>
		<div class="form-group">
			<label>Current Password<sup>*</sup></label>
			{{input id="component-change-password-input-current-password" type="password" value=currentPassword class="form-control"}}
		</div>
		<div class="form-group">
			<label>Enter New Password<sup>*</sup></label>
			{{input id="component-change-password-input-new-password-1" type="password" value=newPassword1 class="form-control"}}
		</div>
		<div class="form-group">
			<label>Re-enter New Password<sup>*</sup></label>
			{{input id="component-change-password-input-new-password-2" type="password" value=newPassword2 class="form-control"}}
		</div>
	</form>
	</div>
</div>
</script>

<script type="text/x-handlebars" data-template-name="components/manage-personal-details">
<div class="box box-primary">
	<div class="box-header with-border" style="height:50px;">
		<h3 class="box-title">Personal Details</h3>
		{{#if model.hasDirtyAttributes}}
		<div class="pull-right" style="cursor:pointer; margin:0px 5px;" {{action "controller-action" "savePersonalDetails" bubbles=false}}>
		    <button class="btn btn-primary btn-sm">
				<i class="fa fa-save" style="margin-right:5px;" /><span>Save</span>	
		    </button>
		</div>
		<div class="pull-right" style="cursor:pointer; margin:0px 5px;" {{action "controller-action" "cancelPersonalDetails" bubbles=false}}>
		    <button class="btn btn-warning btn-sm">
				<i class="fa fa-undo" style="margin-right:5px;" /><span>Cancel</span>
		    </button>
		</div>
		{{/if}}
	</div>
	<div id="div-box-body-component-manage-personal-details" class="box-body">
		<div class="row">
			<div class="col-md-4">
			    <div class="form-group">
			    {{#if FileReader}}
					<label id="component-manage-personal-details-label-profile-image">Drop Image below...</label>
					<div id="component-manage-personal-details-div-image-drop" style="text-align:center;border:1px dashed #c1c1c1; padding:0px;">
					    <img id="component-manage-personal-details-img-profile-image" src="<%= mountPath %>/profileImage" style="max-width:100%; max-height:100%;" />
					</div>
			    {{else}}
				    <p>Drop support not available</p>
			    {{/if}}
				</div>
			</div>
			<div class="col-md-8">
			<form role="form" id="component-manage-personal-details-form-details">
				<div class="form-group">
					<label>First Name<sup>*</sup></label>
					{{input id="component-manage-personal-details-input-first-name" type="text" value=model.firstName class="form-control"}}
				</div>
				<div class="form-group">
					<label>Middle Names</label>
					{{input id="component-manage-personal-details-input-middle-names" type="text" value=model.middleNames class="form-control"}}
				</div>
				<div class="form-group">
					<label>Last Name<sup>*</sup></label>
					{{input id="component-manage-personal-details-input-last-name" type="text" value=model.lastName class="form-control"}}
				</div>
				<div class="row">
					<div class="col-md-6">
						<div class="form-group">
							<label>Gender</label>
							<br />
							<select id="component-manage-personal-details-select-gender" class="form-control" />
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<label>Date of Birth</label>
						    <div class="input-group">
							    <div class="input-group-addon"><i class="fa fa-calendar" /></div>
							    {{input id="component-manage-personal-details-input-dob" type="text" value=model.formattedDOB class="form-control" placeholder="YYYY-MM-DD"}}
						    </div>
						</div>
					</div>
				</div>
				<div class="form-group">
					{{input id="component-manage-account-preferences-input-is-visible" type="checkbox" name="isSearchable" checked=model.isSearchable}}
					<label style="margin-left:5px;">My profile is searchable</label>
				</div>
				<div class="form-group">
					<button id="component-manage-account-preferences-button-delete-account" type="submit" class="btn btn-block btn-danger btn-sm" {{action "controller-action" "deleteAccount" bubbles=false}}>
						<i class="fa fa-remove" style="margin-right:5px;" /><span>Delete Account</span>	
					</button>
				</div>
			</form>
			</div>
		</div>
	</div>
</div>
</script>

<script type="text/x-handlebars" data-template-name="components/manage-linked-accounts">
<div class="box box-primary">
	<div class="box-header with-border">
		<h3 class="box-title">Linked Accounts</h3>
	</div>
	<div id="div-box-body-component-manage-linked-accounts" class="box-body">
	</div>
