<script type="text/x-handlebars" data-template-name="profile">
<div class="box box-default" style="text-align:left; box-shadow:none;">
	<div class="box-header with-border">
		<h3 class="box-title">Manage Profile</h3>
	</div>
	<div class="box-body" style="text-align:left;">
		<div class="row">
			<div class="col-md-6">
				{{manage-personal-details model=model controller-action=(action 'controller-action')}}
			</div>
			<div class="col-md-3">
				{{change-password model=model controller-action=(action 'controller-action')}}
			</div>
			<div class="col-md-3">
				{{manage-linked-accounts controller-action=(action 'controller-action')}}
			</div>
		</div>
	</div>
</div>
</script>

