<script type="text/x-handlebars" data-template-name="components/login-form">
<form role="form">
<div class="box box-solid box-default" style="text-align:left; margin-bottom:0px;">
	<div class="box-header with-border">
		<h3 class="box-title">Twy'r Login</h3>
	</div>
	<div id="div-alert-message" class="box-body callout callout-danger" style="display:none;">
		<i class="fa fa-ban"></i>
		<span id="alert-message">Alert!</span>
	</div>
	<div id="div-success-message" class="box-body callout callout-success" style="display:none; border-radius:0px">
		<span id="success-message">Alert!</span>
	</div>
	<div class="box-body">
		<div class="form-group" id="div-social-logins">
			<div class="row" style="text-align:center;">
				<i class="fa fa-facebook-square fa-2x" title="Facebook Login" style="margin:0px 5px; cursor:pointer;" {{action "doSocialLogin" "facebook"}}></i>
				<i class="fa fa-github-square fa-2x" title="Github Login" style="margin:0px 5px; cursor:pointer;" {{action "doSocialLogin" "github"}}></i>
				<i class="fa fa-google-plus-square fa-2x" title="Google+ Login" style="margin:0px 5px; cursor:pointer;" {{action "doSocialLogin" "google"}}></i>
				<i class="fa fa-linkedin-square fa-2x" title="LinkedIn Login" style="margin:0px 5px; cursor:pointer;" {{action "doSocialLogin" "linkedin"}}></i>
				<i class="fa fa-twitter-square fa-2x" title="Twitter Login" style="margin:0px 5px; cursor:pointer;" {{action "doSocialLogin" "twitter"}}></i>
				{{#link-to 'register-account'}}<i class="fa fa-at fa-2x" title="Register via Email" style="margin:0px 5px; cursor:pointer; color:#333;"></i>{{/link-to}}
			</div>
		</div>
	</div>
	<div class="box-body">
		<div class="form-group" id="div-input-username">
			<label>Twy'r Portal Username</label>
			{{input id="input-username" type="text" value=username class="form-control" placeholder="username@twyrportal.com"}}
		</div>
		<div class="form-group" id="div-input-password">
			<label>Twy'r Portal Password</label>
			{{input id="input-password" type="password" value=password class="form-control" placeholder="password"}}
		</div>          
	</div>
	<div class="box-footer">   
		<div class="row">
			<div class="col-lg-6" style="text-align:left; padding-top:8px;">
				{{#link-to 'reset-password'}}Forgot Password{{/link-to}}  
			</div>
			<div class="col-lg-6" style="text-align:right;">
				<button id="button-login" type="submit" class="btn btn-block" {{action "doLogin"}}>Login</button>  
			</div>
		</div>                                                            
	</div>
</div>
</form>
</script>

